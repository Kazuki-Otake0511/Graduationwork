<h1><%= t('users.index_title') %></h1>

<ul class="list-group">
  <% @users.each do |user| %>
    <li class="list-group-item d-flex align-items-center">
      <!-- プロフィール画像の表示 -->
      <% if user.profile&.profile_image.present? %>
        <%= image_tag(user.profile.profile_image.url, 
                      alt: t('users.profile_image_alt', user_name: user.name), 
                      class: "img-thumbnail me-3", 
                      size: "100x100") %>
      <% else %>
        <%= image_tag('default_profile.png', 
                      alt: t('users.default_profile_image_alt'), 
                      class: "img-thumbnail me-3", 
                      size: "100x100") %>
      <% end %>

      <div>
        <!-- ユーザー情報の表示 -->
        <strong><%= t('users.info.name') %>:</strong> <%= link_to user.name, user_path(user) %><br>
        <strong><%= t('users.info.email') %>:</strong> <%= user.email %><br>
        <strong><%= t('users.info.hobby') %>:</strong> <%= user.profile&.hobby %><br>
        <strong><%= t('users.info.hometown') %>:</strong> <%= user.profile&.hometown %><br>
      </div>
    </li>
  <% end %>
</ul>

<!-- ページネーション -->
<div class="mt-3">
  <%= paginate @users %>
</div>
