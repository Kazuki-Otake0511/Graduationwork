<h1><%= t('auth.login_title') %></h1> <!-- ログインページのタイトルを表示 -->

<%= form_with(url: login_path, local: true, class: "form") do |form| %>
  <!-- form_withを使ってログインフォームを作成。URLはlogin_path、送信方法はPOST -->
  <div class="form-group">
    <%= form.label :email, t('auth.email') %> <!-- emailフィールドのラベルを表示 -->
    <%= form.text_field :email, class: "form-control" %> <!-- emailフィールドを表示 -->
  </div>

  <div class="form-group">
    <%= form.label :password, t('auth.password') %> <!-- passwordフィールドのラベルを表示 -->
    <%= form.password_field :password, class: "form-control" %> <!-- passwordフィールドを表示 -->
  </div>

  <div class="form-group">
    <%= form.submit t('auth.login_button'), class: "btn btn-primary" %> <!-- ログインボタンを表示 -->
  </div>
<% end %>
<p>
  <%= t('auth.no_account') %>
  <%= link_to t('auth.signup_link_text'), new_user_path, class: "btn btn-link" %>
</p>
